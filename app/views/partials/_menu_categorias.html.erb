<div class="box layered-nav">
    <div class="head">
        <div class="h3">Categorias</div></div>
    <div class="border-creator">
        <div class="narrow-by">
            <dl id="narrow-by-list">
                <dd>
                    <ol>
                      <% for categoria in Categoria.find(:all,:conditions=>"status = true",:order=>"nome ASC") %>
                        <li>
                            <%= link_to categoria.nome, categoria_path(categoria),:rel=>"follow",:title=>categoria.nome %>
                        </li>
                      <% end %>
                    </ol>
                </dd>
            </dl>
        </div>
    </div>
</div>

